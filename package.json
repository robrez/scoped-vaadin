{
  "version": "v25.0.0-alpha18",
  "name": "@robrez/scoped-vaadin-web-components",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "web-dev-server --node-resolve --open /dev",
    "clean:node": "rm -rf node_modules && rimraf --glob packages/*/node_modules && rimraf --glob vendor-packages/*/node_modules",
    "build:clean": "rimraf ./git_modules && rimraf ./packages && rimraf ./buildinfo && npm run git_modules && npm run build",
    "build": "npm run build:meta && npm run build:packages",
    "build:packages": "node scripts/build.js",
    "build:meta": "node scripts/build-element-meta.js",
    "test": "web-test-runner",
    "test:watch": "web-test-runner --watch",
    "test:chrome": "web-test-runner --config web-test-runner-chrome.config.cjs",
    "git_modules": "rimraf ./git_modules/ && git clone --single-branch --branch main https://github.com/vaadin/web-components.git ./git_modules/@vaadin/web-components"
  },
  "author": "",
  "license": "Apache-2.0",
  "workspaces": [
    "vendor-packages/*",
    "packages/*",
    "test/*"
  ],
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4",
    "@polymer/iron-overlay-behavior": "^3.0.0",
    "@vaadin/chai-plugins": "~v25.0.0-alpha18",
    "@vaadin/test-runner-commands": "~v25.0.0-alpha18",
    "@vaadin/testing-helpers": "^1.1.0",
    "@web/dev-server": "^0.4.3",
    "@web/dev-server-esbuild": "^1.0.2",
    "@web/rollup-plugin-html": "^2.1.2",
    "@web/test-runner": "^0.20.2",
    "@web/test-runner-chrome": "^0.18.1",
    "@web/test-runner-commands": "^0.9.0",
    "@web/test-runner-playwright": "^0.11.1",
    "@web/test-runner-puppeteer": "^0.18.0",
    "@web/test-runner-saucelabs": "^0.13.0",
    "@web/test-runner-visual-regression": "^0.10.0",
    "diff": "^8.0.2",
    "dotenv": "^16.5.0",
    "es-module-lexer": "^1.7.0",
    "glob": "^11.0.2",
    "lit": "^3.0.0",
    "rimraf": "^6.0.1",
    "simple-git": "^3.22.0",
    "sinon": "^18.0.0",
    "terser": "^5.44.0"
  },
  "resolutions": {
    "playwright": "^1.52.0"
  }
}
